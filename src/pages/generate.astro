---
import MainLayout from "../layouts/MainLayout.astro";
import GenerateView from "../components/GenerateView";

// Force server-side rendering
export const prerender = false;

// Zabezpieczenie dostÄ™pu - tylko dla zalogowanych
if (!Astro.locals.user) {
  return Astro.redirect("/auth/login");
}
---

<MainLayout title="Generowanie fiszek | 10xCards">
  <div class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-6">Generowanie fiszek</h1>
      <GenerateView client:load />
      <p class="text-center text-sm text-gray-500 mt-4">
        <a
          href="https://github.com/meta-llama/llama-models/blob/main/models/llama4/LICENSE"
          target="_blank"
          rel="noopener noreferrer">Built with Llama</a
        >
      </p>
    </div>
  </div>
</MainLayout>
