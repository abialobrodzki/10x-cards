---
import MainLayout from "../../layouts/MainLayout.astro";
import { SignUpForm } from "../../components/auth/SignUpForm";

/**
 * Wymusza renderowanie tej strony po stronie serwera (SSR).
 * Jest to potrzebne, aby formularz rejestracji (komponent React) mógł działać poprawnie z API.
 */
export const prerender = false;
---

<MainLayout title="10xCards - Rejestracja">
  {
    /* 
    Kontener strony rejestracji zawierający formularz SignUpForm.
    SignUpForm jest komponentem React renderowanym po załadowaniu strony (`client:load`).
  */
  }
  <div class="bg-gray-50">
    <div class="container max-w-md mx-auto px-4 py-8">
      <div class="rounded-lg border border-border bg-card p-6 shadow-sm">
        <SignUpForm client:load />
      </div>
    </div>
  </div>
</MainLayout>
